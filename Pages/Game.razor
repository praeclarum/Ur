@page "/game/{GameId}"
@inject Ur.Data.GameRepo repo;

<h1>@TheGame?.Title</h1>

<p>Started: @TheGame?.StartTime</p>

@if (TheGame == null) {
    <p>No game found</p>
}
else {
    <GameBoard Game=@TheGame />
}

@code {
    Ur.Data.Game TheGame => repo.FindGame(GameId);

    [ParameterAttribute]
    public string GameId { get; set; }
}
